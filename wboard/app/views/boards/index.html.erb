<h1>Listing boards</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Password</th>
    <th>Width</th>
    <th>Height</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @boards.each do |board| %>
  <tr>
    <td><%= board.id %></td>
    <td><%= board.title %></td>
    <td><%= board.password %></td>
    <td><%= board.width %></td>
    <td><%= board.height %></td>
    <td><%= link_to 'Show', board %></td>
    <td><%= link_to 'Edit', edit_board_path(board) %></td>
    <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

